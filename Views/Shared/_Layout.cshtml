<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Restaurantes-Tchchas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AMS23_caroucel.styles.css" asp-append-version="true" />
     <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="~/js/quack.js" asp-append-version="true"></script>
     <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/PIZZARIA TCHACHAS (1).png" width = "90px" height = "100px" alt="..."></a>
                <button onclick="quaks('5')" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a type="button" class="nav-link text-dark" onclick="quaks('4')" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    
                        <li class="nav-item">
                            <div class="btn-group">
  <button type="button" class="btn btn-secondary dropdown-toggle" onclick="quaks('3')" data-bs-toggle="dropdown" aria-expanded="false">
    Cadastrar
  </button>
  <ul class="dropdown-menu dropdown-menu-end">
    <li><a class="dropdown-item" type="button" asp-area="" asp-controller="Home" asp-action="Categoria">Categoria</a></li>
    <li><a class="dropdown-item" type="button" asp-area="" asp-controller="Home" asp-action="Produto">Produto</a></li>
  </ul>
<li>
<input type="checkbox" class="change-theme" id="change-theme" />
<label class="label" for="change-theme">
<i class="bi bi-sun"></i>
<i class="bi bi-moon"></i>
 <div class="ball"></div>
 </label>
</li>
</div>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
