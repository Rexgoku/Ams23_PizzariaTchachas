<partial name="_Carousel">
@{
    ViewData["Title"] = "PRODUTOS";


}
<head>
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
      <script src="~/js/site.js" defer></script>
     <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"/>
          <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
</head>
<script src="~/js/quack.js" asp-append-version="true"></script>
    <br>
<header>
    <h1>@ViewData["Title"]</h1>
    <script src="~/js/site.js" defer></script>
    <div>
        <input type="checkbox" class="change-theme" id="change-theme" />
         <label class="label" for="change-theme">
          <i class="bi bi-sun"></i>
          <i class="bi bi-moon"></i>
          <div class="ball"></div>
          </label>
    </div>
   </header>
   <br>
<form>
    <div class="input-group">
    <input type="text" id="DesP" name="DesP" class="input-group_input" required/>
    <label for="name" class="input-group_Label">Descrição do produto</label>
    </div>
    <br>
    <div class="input-group">
    <input type="text" id="valor" name="valor" class="input-group_input" required/>
    <label for="name" class="input-group_Label">Valor </label>
    </div>
    <br>
    <div class="input-group">
    <input type="text" id="urlImage" name="urlImage" class="input-group_input" required/>
    <label for="name" class="input-group_Label">Url da imagem </label>
    </div>
    <br>
    <input type="checkbox" value="Sim" class="form-checked-input" id="aceite">
    <label class="form-check-label" for="aceite">Aceito os termos.</label>
    <br><br>
    <button type="submit" class="glow-on-hover" >Cadastrar</button>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>

</form>
